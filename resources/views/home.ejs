        <section class="main py-16">

            <div class="container mx-auto flex items-center justify-between ">

                <div class="w-1/2">
                     <h6 class="text-lg"><em>For all your cravings...</em></h6>
                     <br>
                     <h1 class="text-6xl font-bold">Order Now!</h1>
                     <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Buy Food</button>
                </div>

                <div class="w-1/2">
                   <img src="/img/main1.jpg" class="rounded">
                </div>

            </div>

        </section>

        <section class="menu container mx-auto py-8">

            <h1 class="text-xl font-bold mb-8">Food Items</h1>

            <div class="grid grid-cols-4 col-gap-12 row-gap-16">

                <% foods.forEach(food => { %>
               
                
                    <div>
    
                        <img src="/img/<%- food.image %>" class="h-40 mb-4 mx-auto">
     
                        <div class="text-center">
                           
                         <h2 class="text-lg mb-4"> <%- food.name %>  Margherita</h2>
     
                         <span class="py-1 px-4 rounded-full uppercase text-xs smsize"><%- food.description %></span>
     
                         <div class="flex items-center justify-around mt-6">
                               
                            <span class="font-bold text-lg">$<%-food.price%> </span>

                            <button data-food="<%=JSON.stringify(food)%>"  class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
     
                        </div>
     
                        </div>
                     
                    </div>
    
               <% }) %>


            </div>

        </section>
